<div class="posts">
    {{#each blogs}}
    <article class="card">
        <div class="flex-row justify-space-between">
            <div class="post-header">
                <h2>
                    <a href="/post/{{id}}">{{name}}</a>
                </h2>
                <div>
                    Posted by {{user.username}} on {{format_date date_created}}
                </div>
            </div>
            <div class="card-body">
                {{description}}
            </div>
        </div>
    </article>
    {{/each}}
</div>