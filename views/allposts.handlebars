<div class="posts">
    {{#each blogs as |blog|}}
    <article class="card">
        <div class="card-header flex-row justify-space-between"
            <h2>
                <a href="/post/{{id}}">{{name}}</a>
            </h2>
            <div>
                Posted by {{user.username}} on {{format_date createdAt}}
            </div>
            <div class="card-body">
                {{description}}
            </div>
    </article>
    {{/each}}
</div>